    </style>

    <style name="TextViewLessonDetails">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">5sp</item>
    </style>

    <style name="ListViewDayOverview">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">5sp</item>
    </style>
    
</resources>
